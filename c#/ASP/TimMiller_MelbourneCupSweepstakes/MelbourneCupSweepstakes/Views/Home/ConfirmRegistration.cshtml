@model MelbourneCupSweepstakes.Models.Player
   
<!DOCTYPE html> 
<html lang="en">  
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet"  type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet"  type="text/css" href="/Content/css/custom.css">
    <title>Confirm Registration</title>
</head>
<body>

    <div class="container-fluid"><!--container-->
    
        <div class="row" id="header">
            <img src="../../Content/img/logo4.png" height="113px" width="1093px" alt=""  id="headerImg"/>
        </div>
        <div class="row"><!--Nav bar-->  
                <a class="navbar-text" href="../Home/Index">Home</a>
                <a class="navbar-text" href="../Race/Index">Race Results</a>
            </div><!--End Nav bar-->

        <div class="row"><!--body-->        

            <div class="col-md-4"></div>
            <div class="col-md-4 "><br /><br /><br /><br /><!--center column-->
                <h2>Confirm Details</h2> <br />
                <h3>Are these details correct:</h3><br />
                <div class="col-md-2"></div>                    
                <!--display new user details-->
                @using (Html.BeginForm("ConfirmProcess", "Home", FormMethod.Get, new { @class = "form-horizontal" }))
                {
                        <div class="col-md-6">
                            <p>
                            <div class='col-md-2'>&nbsp;&nbsp;&nbsp;&nbsp;<strong>Name:</strong></div>
                            <div class="col-md-4"></div>
                            <div class='col-md-6'>&nbsp;&nbsp;&nbsp;&nbsp;@Model.Name</div>
                            <div class="col-md-12"><br /></div>
                            <div class='col-md-2'>&nbsp;&nbsp;&nbsp;&nbsp;<strong>Email:</strong></div>
                            <div class="col-md-4"></div>
                            <div class='col-md-6'>&nbsp;&nbsp;&nbsp;&nbsp;@Model.EmailAddress</div>
                            <div class="col-md-12"><br /></div>
                            <div class='col-md-2'>&nbsp;&nbsp;&nbsp;&nbsp;<strong>Bets:</strong></div>
                            <div class="col-md-4"></div>
                            <div class='col-md-6'>&nbsp;&nbsp;&nbsp;&nbsp;@Model.TotalBets</div>
                                </p>
                        </div>
                        
                    @Html.HiddenFor(p => p.Name)
                    @Html.HiddenFor(p => p.EmailAddress)
                    @Html.HiddenFor(p => p.TotalBets)
                    @Html.HiddenFor(p => p.PrizeMoney)                    
                    <input type="hidden" name="numBets" value="@ViewBag.numBets" /> 

                    <div class="col-md-12"><br /><br /></div>  
                    <div class="col-md-3"></div>
                    <div class="col-md-4"><input type="submit" name="submit" value="Submit" class="btn btn-primary btn-lg" /></div>                    
                    <div class="col-md-5"><input type="submit" name="submit" value="Cancel" class="btn btn-primary btn-lg" /></div>
                }                  
            </div><!--end center column-->    
        </div><!--end body-->
    </div><!--end container-->
</body>

</html>